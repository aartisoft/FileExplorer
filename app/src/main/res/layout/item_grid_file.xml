<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="70dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_grid_file"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/format_folder" />

    <ImageView
        android:id="@+id/iv_grid_file_unselected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_grid_file"
        android:layout_alignRight="@+id/iv_grid_file"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/bg_circle_white"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_grid_file_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_grid_file"
        android:layout_alignRight="@+id/iv_grid_file"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/ic_check_circle_green_500_18dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_gird_file"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/iv_grid_file"
        android:layout_centerHorizontal="true"
        android:maxLines="2"
        android:text="我有一双隐形的翅膀"
        android:textColor="@android:color/background_dark" />
</RelativeLayout>